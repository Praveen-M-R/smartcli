{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI: Uvicorn (app.main:app)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8001",
        "--reload"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": false,
      "subProcess": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Celery: Worker (-P solo)",
      "type": "debugpy",
      "request": "launch",
      "module": "celery",
      "args": [
        "-A",
        "app.celery_app:celery",
        "worker",
        "-l",
        "INFO",
        "-P",
        "solo"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": false,
      "console": "integratedTerminal"
    },
    {
      "name": "FastAPI: Debug Tests (pytest)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-s", // show print/log output
        "-v", // verbose mode
        "tests" // or change to "tests/test_users.py" for specific file
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": false,
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Run API + Celery",
      "configurations": [
        "FastAPI: Uvicorn (app.main:app)",
        "Celery: Worker (-P solo)"
      ]
    }
  ]
}